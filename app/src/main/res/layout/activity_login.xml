<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cntREF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDCACA"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".ui.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/MomoColor">
        <ImageButton
            android:id="@+id/backLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="30sp"
            android:text="Xin chào, 0987654321"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:text="Nhập mật khẩu"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <EditText
            android:drawableEnd="@drawable/hidepass"
            android:id="@+id/edpass"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center_vertical"
            android:maxLength="6"
            android:hint="Nhập mật khẩu của bạn"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10sp"
                android:id="@+id/quenPass"
                android:text="Quên mật khẩu?"
                android:textColor="#364ABA"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/changePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10sp"
                android:text="Đổi SĐT"
                android:textColor="#364ABA"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageButton
            android:id="@+id/imbbackRECon"
            android:layout_width="40dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="@drawable/baseline_fingerprint_24"
            />

        <TextView

            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Mở khóa bằng vân tay "
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btlogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/roundedbutton"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>